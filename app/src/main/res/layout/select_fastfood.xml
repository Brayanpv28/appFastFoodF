<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_x="1dp"
        android:layout_y="60dp">

    </View>

    <TextView
        android:id="@+id/localNane"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="17dp"
        android:text="Nombre del Local"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/mensajeHacer"
        android:layout_width="396dp"
        android:layout_height="27dp"
        android:layout_x="7dp"
        android:layout_y="264dp"
        android:text="Selecciona que quieres pedir hoy"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/burgerButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="306dp"
        android:background="@drawable/bordesviewbuttons"
        android:paddingLeft="16dp"
        android:scaleType="fitStart"
        android:src="@drawable/hamburguesa" />

    <ImageButton
        android:id="@+id/hotdogButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="386dp"
        android:src="@drawable/hotdog"
        android:scaleType="fitStart"
        android:paddingLeft="16dp"
        android:background="@drawable/bordesviewbuttons"/>

    <ImageButton
        android:id="@+id/potatosButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="466dp"
        android:src="@drawable/frieds"
        android:scaleType="fitStart"
        android:paddingLeft="25dp"
        android:background="@drawable/bordesviewbuttons"/>

    <ImageButton
        android:id="@+id/drinksButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="546dp"
        android:background="@drawable/bordesviewbuttons"
        android:paddingLeft="18dp"
        android:scaleType="fitStart"
        android:src="@drawable/bebidas" />

    <TextView
        android:id="@+id/productoBurger"
        android:layout_width="239dp"
        android:layout_height="37dp"
        android:layout_x="107dp"
        android:layout_y="326dp"
        android:text="HAMBURGUESA"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/productoHotDog"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_x="156dp"
        android:layout_y="406dp"
        android:text="PERRO"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/productoSalchipapas"
        android:layout_width="194dp"
        android:layout_height="37dp"
        android:layout_x="126dp"
        android:layout_y="486dp"
        android:text="SALCHIPAPAS"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/productoBebidas"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:layout_x="144dp"
        android:layout_y="566dp"
        android:text="BEBIDAS"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="102dp"
        android:src="@drawable/logo" />


</AbsoluteLayout>