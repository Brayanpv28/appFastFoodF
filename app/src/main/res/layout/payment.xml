<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PagoInterfaz">

    <View
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

    </View>

    <TextView
        android:id="@+id/tltPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:text="@string/pago"
        android:fontFamily="@font/bondstory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="38sp" />

    <ImageButton
        android:id="@+id/backPago"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/buttonback"
        android:src="@drawable/back"
        android:contentDescription="@string/regresar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="@string/informacion"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="23sp"/>

    <TextView
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:text="@string/nombre"
    android:textColor="@color/black"
    android:textAlignment="textStart"
    android:layout_marginStart="10dp"
    android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bordespago"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/celular"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:background="@drawable/bordespago"
        android:inputType="phone" />

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="@string/fecha_hora"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/FechayHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:background="@drawable/bordespago"
        android:editable="false"
        android:focusable="false"
        android:inputType="none"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="280dp"
        android:text="@string/direccion"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:background="@drawable/bordespago"
        android:inputType="textPostalAddress"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="@string/vivienda"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/seVivienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/bordespago"
        android:entries="@array/opciones"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="@string/metodo_pago"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/sformaPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bordespago"
        android:entries="@array/pago"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="456dp"
        android:text="@string/valor_pagar"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtValorTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/bordesviewbuttons"/>

    <TextView
        android:id="@+id/titleDevuelta"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="518dp"
        android:text="@string/devuelta_pago"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtValorD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="542dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:editable="false"
        android:background="@drawable/bordesviewbuttons"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/titleNumT"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="569dp"
        android:text="@string/numero_tarjeta"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/numTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="594dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:background="@drawable/bordespago"
        android:inputType="number"
        android:maxLength="16"/>

    <EditText
        android:id="@+id/txtCVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="628dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="230dp"
        android:ems="10"
        android:hint="@string/cvc"
        android:background="@drawable/bordespago"
        android:inputType="number"
        android:maxLength="3"/>

    <EditText
        android:id="@+id/txtVenciTarje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="628dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bordespago"
        android:hint="@string/mes_aÃ±o"
        android:ems="10"
        android:inputType="date" />

    <ImageButton
        android:id="@+id/pagoyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pagar"
        android:layout_marginTop="665dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordescarrito"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="4dp"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/txtPagary"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:layout_below="@id/pagoyButton"
        android:layout_marginTop="-58dp"
        android:layout_marginStart="145dp"
        android:fontFamily="@font/bondstory"
        android:text="@string/realizar_pago"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>